- model_class = Deck

.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped
  %thead
    %tr
      %th 
      %th Name
      -# %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @decks.each do |deck|
      %tr
        %td
          = link_to 'Make Cards', card_builder_for_deck_and_text_line_path(deck, 1), :class => 'btn-info btn-mini btn'
        %td= link_to deck.text.name, deck_path(deck)
        -# %td=l deck.created_at
        %td
          = link_to 'Export (Anki)', deck_path(deck, format: :txt), :class => 'btn-mini btn'
          |
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_deck_path(deck), :class => 'btn-warning btn-mini btn'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), deck_path(deck), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

-# = link_to t('.new', :default => t("helpers.links.new")), new_deck_path, :class => 'btn btn-primary'
= link_to "New Deck", new_deck_path, :class => 'btn btn-primary'
