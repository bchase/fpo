= form_for @text do |f|
  - if @text.errors.any?
    #error_explanation
      %h2= "#{pluralize(@text.errors.count, "error")} prohibited this text from being saved:"
      %ul
        - @text.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :episode
    = f.text_field :episode
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :raw
    = f.text_area :raw
  .actions
    = f.submit 'Save'
