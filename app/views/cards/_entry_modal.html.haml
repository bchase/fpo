.modal.hide{id: "char#{@char.object_id}", "aria-hidden" => "true", "aria-labelledby" => "modal-label", :role => "dialog", :tabindex => "-1"}
  .modal-header
    %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
    %h3#modal-label Select Entries
  .modal-body
    %ol.entries
      - @entries.each do |entry|
        %li.entry
          %p.traditional-characters
            = entry.traditional_characters
          %p.simplified-characters
            = entry.simplified_characters
          %p.pronunciation
            = entry.pronunciation
          %ol.glosses
            - entry.glosses.each do |gloss|
              %li.gloss= gloss
  .modal-footer
    %button.btn{"aria-hidden" => "true", "data-dismiss" => "modal"} Cancel
    %button.btn.btn-primary Done
